extends layout

block content
  h1 Item: #{detail_item.name}

  p #[strong Brand:]
    a(href=detail_item.brand.url) #{detail_item.brand.name}
  p #[strong Category:]
    a(href=detail_item.category.url) #{detail_item.category.name}
  p #[strong Description:] #{detail_item.description}
  p #[strong Price:] #{detail_item.price} EUR
  p #[strong Number of stock:] #{detail_item.number_of_stock}


  hr
  p
    a(href=detail_item.url+'/delete') Delete Item
  p
    a(href=detail_item.url+'/update') Update Item
